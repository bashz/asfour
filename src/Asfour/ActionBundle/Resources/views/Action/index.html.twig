{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Action list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Locale</th>
                <th>Title</th>
                <th>Date</th>
                <th>Slug</th>
                <th>Preambule</th>
                <th>Body</th>
                <th>Facts</th>
                <th>Is_active</th>
                <th>Place</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('action_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.locale }}</td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.preambule }}</td>
                <td>{{ entity.body }}</td>
                <td>{{ entity.facts }}</td>
                <td>{{ entity.isactive }}</td>
                <td>{{ entity.place }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('action_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('action_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('action_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
